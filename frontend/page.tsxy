"use client";

import { useEffect, useState } from "react";

export default function Home() {
  // États pour gérer les valeurs dynamiques côté client
  const [randomNumber, setRandomNumber] = useState<number | null>(null);
  const [currentTime, setCurrentTime] = useState<string>("");
  const [isClient, setIsClient] = useState<boolean>(false);

  useEffect(() => {
    setIsClient(true); // Vérifie que l'on est bien côté client
    setRandomNumber(Math.random()); // Généré uniquement côté client
    setCurrentTime(new Date().toLocaleString()); // Généré uniquement côté client
  }, []);

  console.log("✅ Composant Home chargé !");

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100">
      <h1 className="text-4xl font-bold text-blue-600">
        🚀 Smithair Concept {isClient ? "est bien chargé !" : "est en cours..."}
      </h1>
      <p className="text-gray-500 mt-4">
        🔢 Nombre aléatoire : {randomNumber !== null ? randomNumber.toFixed(2) : "Chargement..."}
      </p>
      <p className="text-gray-500 mt-4">
        ⏰ Heure actuelle : {currentTime || "Chargement..."}
      </p>
      <p className="text-green-600 mt-4 font-semibold">
        ✅ Hydratation réussie, tout fonctionne correctement !
      </p>
    </div>
  );
}
