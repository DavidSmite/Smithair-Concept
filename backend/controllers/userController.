const bcrypt = require('bcrypt');
const jwt = require('jsonwebtoken');  
const mongoose = require('mongoose');
const User = require('../models/User');

// âœ… Inscription d'un utilisateur
const registerUser = async (req, res) => {
    try {
        const { username, email, password, role } = req.body;
        console.log("ğŸ“© Tentative d'inscription :", { username, email });

        const existingUser = await User.findOne({ email });
        if (existingUser) {
            return res.status(400).json({ error: "âŒ Un utilisateur avec cet email existe dÃ©jÃ  !" });
        }

        const hashedPassword = await bcrypt.hash(password, 10);
        const newUser = new User({ username, email, password: hashedPassword, role: role || 'user' });

        await newUser.save();
        console.log("âœ… Utilisateur inscrit avec succÃ¨s :", newUser);
        res.status(201).json({ message: "âœ… Utilisateur inscrit avec succÃ¨s !" });

    } catch (error) {
        console.error("ğŸš¨ Erreur lors de l'inscription :", error);
        res.status(500).json({ error: "ğŸš¨ Erreur interne du serveur" });
    }
};

// ğŸ”‘ Connexion d'un utilisateur
const loginUser = async (req, res) => {
    try {
        const { email, password } = req.body;
        console.log("ğŸ”‘ Tentative de connexion :", email);

        const user = await User.findOne({ email });
        if (!user) {
            console.log("âŒ Utilisateur introuvable");
            return res.status(400).json({ error: "âŒ Email ou mot de passe incorrect" });
        }

        const validPassword = await bcrypt.compare(password, user.password);
        if (!validPassword) {
            console.log("âŒ Mot de passe incorrect");
            return res.status(400).json({ error: "âŒ Email ou mot de passe incorrect" });
        }

        const token = jwt.sign(
            { _id: user._id, role: user.role },
            process.env.JWT_SECRET,
            { expiresIn: "1h" }
        );

        console.log("âœ… Connexion rÃ©ussie, Token gÃ©nÃ©rÃ© !");
        res.status(200).json({ message: "âœ… Connexion rÃ©ussie !", token });

    } catch (error) {
        console.error("ğŸš¨ Erreur interne du serveur :", error);
        res.status(500).json({ error: "ğŸš¨ Erreur interne du serveur" });
    }
};

// ğŸ“‹ RÃ©cupÃ©rer tous les utilisateurs
const getAllUsers = async (req, res) => {
    try {
        console.log("âœ… Route GET /api/users appelÃ©e !");
        const users = await User.find({}, '-password'); // Exclut les mots de passe pour la sÃ©curitÃ©
        res.status(200).json(users);
    } catch (error) {
        console.error('âŒ Erreur lors de la rÃ©cupÃ©ration des utilisateurs:', error);
        res.status(500).json({ error: 'âŒ Erreur interne du serveur' });
    }
};

// ğŸ” RÃ©cupÃ©rer un utilisateur par son ID avec logs dÃ©taillÃ©s
const getUserById = async (req, res) => {
    try {
        console.log(`ğŸ” Recherche de l'utilisateur avec l'ID: ${req.params.id}`);
        
        if (!mongoose.Types.ObjectId.isValid(req.params.id)) {
            console.log(`âŒ ID non valide: ${req.params.id}`);
            return res.status(400).json({ error: "âŒ ID utilisateur invalide" });
        }
        
        console.log('âœ… ID valide, recherche dans la base de donnÃ©es...');
        const user = await User.findById(req.params.id, '-password'); // Exclure le mot de passe
        
        if (!user) {
            console.log('âŒ Utilisateur non trouvÃ©');
            return res.status(404).json({ error: "âŒ Utilisateur non trouvÃ©" });
        }
        
        console.log('âœ… Utilisateur trouvÃ©');
        res.status(200).json(user);
    } catch (error) {
        console.error("ğŸš¨ Erreur dÃ©taillÃ©e:", error.message, error.stack);
        res.status(500).json({ error: "ğŸš¨ Erreur interne du serveur" });
    }
};

// ğŸ”„ Mettre Ã  jour un utilisateur
const updateUser = async (req, res) => {
    try {
        const { username, email, password, role } = req.body;
        const userId = req.params.id;

        console.log("ğŸ” RequÃªte reÃ§ue pour mise Ã  jour de l'utilisateur :", userId);
        console.log("ï¿½ï¿½ DonnÃ©es reÃ§ues :", req.body);

        if (!userId.match(/^[0-9a-fA-F]{24}$/)) {
            console.log("âŒ ID utilisateur invalide :", userId);
            return res.status(400).json({ error: "âŒ ID utilisateur invalide" });
        }

        const user = await User.findById(userId);
        if (!user) {
            console.log("âŒ Utilisateur introuvable :", userId);
            return res.status(404).json({ error: "âŒ Utilisateur non trouvÃ©" });
        }

        if (username) user.username = username;
        if (email) user.email = email;
        if (role) user.role = role;
        if (password) {
            user.password = await bcrypt.hash(password, 10);
        }

        await user.save();
        console.log("âœ… Mise Ã  jour rÃ©ussie !", user);
        res.status(200).json({ message: "âœ… Mise Ã  jour rÃ©ussie !", user });

    } catch (error) {
        console.error("ğŸš¨ Erreur lors de la mise Ã  jour :", error);
        res.status(500).json({ error: "ğŸš¨ Erreur interne du serveur" });
    }
};

// ğŸ—‘ï¸ Supprimer un utilisateur
const deleteUser = async (req, res) => {
    try {
        const userId = req.params.id;
        console.log("ğŸ—‘ï¸ Tentative de suppression de l'utilisateur :", userId);

        if (!userId.match(/^[0-9a-fA-F]{24}$/)) {
            console.log("âŒ ID utilisateur invalide :", userId);
            return res.status(400).json({ error: "âŒ ID utilisateur invalide" });
        }

        const user = await User.findByIdAndDelete(userId);
        if (!user) {
            return res.status(404).json({ error: "âŒ Utilisateur non trouvÃ©" });
        }

        console.log("âœ… Suppression rÃ©ussie !");
        res.status(200).json({ message: "âœ… Utilisateur supprimÃ© avec succÃ¨s !" });

    } catch (error) {
        console.error("ğŸš¨ Erreur lors de la suppression :", error);
        res.status(500).json({ error: "ğŸš¨ Erreur interne du serveur" });
    }
};

// âœ… Export des fonctions
module.exports = {
    registerUser,
    loginUser,
    getAllUsers,
    getUserById,  // âœ… Ajout de la fonction ici
    updateUser,
    deleteUser
};
