import express from "express";
import mongoose from "mongoose";
import dotenv from "dotenv";
import cors from "cors";
import authRoutes from "./routes/authRoutes.mjs";
import os from "os"; // ‚úÖ Import du module OS pour v√©rifier les interfaces r√©seau

dotenv.config();

const app = express();
const PORT = process.env.PORT || 4000;

console.log("üîó Connexion √† MongoDB avec l'URL :", process.env.MONGO_URI
  ? `${process.env.MONGO_URI.split('//')[0]}//*****`
  : "mongodb://localhost:27017/smithair");

// Connexion √† MongoDB
mongoose
  .connect(process.env.MONGO_URI || "mongodb://localhost:27017/smithair")
  .then(() => console.log("‚úÖ Connexion √† MongoDB r√©ussie"))
  .catch((err) => {
    console.error("‚ùå Erreur de connexion √† MongoDB :", err);
    process.exit(1);
  });

// Middleware
app.use(cors());
app.use(express.json());

// Routes
app.use("/api/auth", authRoutes);

app.get("/", (req, res) => {
  res.send("üöÄ Backend de Smithair Concept op√©rationnel !");
});

// ‚úÖ V√©rification des interfaces r√©seau avant de d√©marrer le serveur
console.log("üîç Interfaces r√©seau disponibles :", os.networkInterfaces());

// D√©marrer le serveur
app.listen(PORT, "0.0.0.0", () => {
  console.log(`‚úÖ Serveur backend d√©marr√© sur http://localhost:${PORT}`);
});
